.container{
  padding:20rpx 0;
}

.select_box{
  display: flex;
  background: #fff;
  width: 80%;
  margin: 50rpx auto;
  position: relative;
}
.select_info{
  font-size:35rpx;
  width:30%;
  margin-right:30rpx;
  margin-top:10rpx;
}
.select{
  box-sizing: border-box;
  width: 80%;
  height: 70rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.picker{
  box-sizing: border-box;
  width: 80%;
  height: 70rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.total{
  box-sizing: border-box;
  width: 60%;
  height: 70rpx;
  display: flex;
  align-items: center;
  margin-top:20rpx;
  /* margin-left: 100rpx; */
}
.total_text{
  font-size: 30rpx;
  /* flex: 1; */
}
.total_num{
  width:30%;
  height: 60rpx;
  border:1rpx solid #C0C0C0;
  border-radius: 8rpx;
  margin-left: 100rpx;
}

.submit{
  margin:100rpx;
}