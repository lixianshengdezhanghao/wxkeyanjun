<!--pages/order/order.wxml-->
<view class='page'>
  <view class='page__hd'>
    <view  class='container'>
      <image class="logo__img" src="../../images/favicon4.png" style='border-radius: 50%;' bindtap='mainpage'></image>
      <text class="brand" bindtap='mainpage'>Firmiana</text> 
      <view class='switch' bindtap='swicth'  >
        <image class="logo__img" src="../../images/icon_switch.png" style='width:50rpx;height:50rpx;border-radius: 50%;'></image>
        <view style='font-size:26.5rpx'> 切换 </view>
      </view>
    </view>
  </view>
  <view  style='border-top:1rpx solid #D3D3D3;background-color: #fff;height:200rpx'> 
    <view style='margin:50rpx;font-size:50rpx;text-align:center;align-items:center;'> 订单查询  </view>        
  </view>

  <view class='page__bd'>
    <view class="container__bd">
      <view style='font-size:40rpx;margin-top:40rpx;text-align:center;'> 查看我的订单状态</view>
      <view class="inputArea">
        <view class="input-item" > 
          <text> 订单号：</text>
          <input class="input"  type="number" placeholder='购买时的订单号' /> 
          <text >手机号码： </text>
          <input class="input" type="number" placeholder='购买时的手机号' />
          <text > 验证码： </text>
          <view style='display:flex;flex-direction:row'>
            <input class="input" type="number" style="width:150rpx;" />
            <button  style="width:180rpx;height:60rpx;font-size:22rpx;" class="btn" bindtap='getVerificationCode'> 获取验证码 </button>
          </view>
          <button  class="btn" bindtap='query'> 立即查询 </button>
        </view>
        
      </view>
    </view>
  </view>

  

</view>

