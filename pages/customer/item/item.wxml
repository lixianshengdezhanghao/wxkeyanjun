<!--pages/item/item.wxml-->
<view class='page'>
  <view class='header'>
    <van-notice-bar style="position:fixed;top:0;width:100%;" mode="closeable"
      text="温馨提示:如果套件码没有跟检测者的账户绑定，我们可能会无法处理您的样本。" />
    <!-- <image class="logo__img" src="/images/favicon4.png" style='border-radius: 50%;' bindtap='mainpage'></image> -->
    <image class="item-cover" src="/images/customer/pro/item-cover.jpg" mode="aspectFill" lazy-load="false" binderror=""
      bindload="">
    </image>
    <view class="pro-title">蛋白质检测服务
    </view>
    <view>
      <button class="pro-btn" bindtap='bind'>绑定套件</button>
    </view>
  </view>

  <view class="item-content">
    <i-button i-class="item-btn" bind:click="toggleRight1" type="ghost" type="success" shape="circle" size="small">
      <view class="btn-content">
        <image class="btn-content-img" src="/images/customer/lab/fluid.png"></image>
        <view class="btn-content-text">
          体液检测服务
        </view>
      </view>
    </i-button>
    <i-drawer mode="right" visible="{{showRight1}}" bind:close="toggleRight1">
      <view class="demo-container">
        <block wx:for="{{itemList[0].subnames}}">
          <button class="demo-btn" bindtap='addToCart' data-item='{{item.name}}' data-supplyno="{{item.supplyno}}"
            data-price="{{item.price}}" data-detail="{{item.value}}" style=" background:{{item.bgColor}}; box-shadow: 0rpx 2rpx 20rpx 4rpx {{item.bgColor}};">{{item.name}} </button>
        </block>
      </view>
    </i-drawer>
    <i-button i-class="item-btn" bind:click="toggleRight2" type="ghost" type="info" shape="circle" size="small">
      <view class="btn-content">
        <image class="btn-content-img" src="/images/customer/lab/cell.png"></image>
        <view class="btn-content-text">
          细胞检测服务
        </view>
      </view>
    </i-button>
    <i-drawer mode="right" visible="{{showRight2}}" bind:close="toggleRight2">
      <view class="demo-container">
        <block wx:for="{{itemList[1].subnames}}">
          <button class="demo-btn" bindtap='addToCart' data-item='{{item.name}}' data-supplyno="{{item.supplyno}}"
            data-price="{{item.price}}" data-detail="{{item.value}}" style=" background:{{item.bgColor}}; box-shadow: 0rpx 2rpx 20rpx 4rpx {{item.bgColor}};">{{item.name}} </button>
        </block>
      </view>

    </i-drawer>
    <i-button i-class="item-btn" bind:click="toggleRight3" type="ghost" type="error" shape="circle" size="small">
      <view class="btn-content">
        <image class="btn-content-img" src="/images/customer/lab/section.png"></image>
        <view class="btn-content-text">
          组织检测服务
        </view>
      </view>
    </i-button>
    <i-drawer mode="right" visible="{{showRight3}}" bind:close="toggleRight3">
      <view class="demo-container">
        <block wx:for="{{itemList[2].subnames}}">
          <button class="demo-btn" bindtap='addToCart' data-item='{{item.name}}' data-supplyno="{{item.supplyno}}"
            data-price="{{item.price}}" data-detail="{{item.value}}" style=" background:{{item.bgColor}}; box-shadow: 0rpx 2rpx 20rpx 4rpx {{item.bgColor}};">{{item.name}} </button>
        </block>
      </view>
    </i-drawer>
  </view>
  <v-tabBar num="{{num}}"></v-tabBar>

</view>