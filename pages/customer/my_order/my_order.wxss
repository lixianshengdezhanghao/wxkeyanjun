/* 切换栏结束 */

/* 订单列表 */
.hot-box {
  height: 100%;
  padding-top: 90rpx;
}

.order-details {
  background: #fff;
  box-shadow: 0rpx 2rpx 30rpx 5rpx rgba(25, 25, 25, .1);
  margin: 20rpx 10rpx 20rpx 10rpx;
  border-radius: 25rpx;
  text-align: center;
}

.order-details:last-child {
  margin-bottom: 115rpx;
}

.order-list-title {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ccc;
}

.order-list-title .user-name {
  padding-right: 50rpx;
  margin-left: 10px;
}

.order-list-title .order-status {
  float: right;
  margin-right: 20rpx;
  color: #71C671;
  font-size: 34rpx;
}

.order-list-details {
  display: flex;
  height: 200rpx;
  border-bottom: 1rpx solid #f3f3f3;
  justify-content: space-between;
}

.product-img {
  flex: 1;
  height: 180rpx;
  width: 120rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.product-img image {
  width: 200rpx;
  height: 90%;
}

.product-info {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
  font-size: 15px;
}

.product-title,
.product-price {
  color: #808080;
  margin-top: 5rpx;
}

.order-list-details .product-info .product-title {
  font-size: 15px;
  /* overflow: hidden; */
  margin-bottom: 10px;
}

.product-count {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/*  
.product-count{
  float: right;
  margin-right: 30rpx;
  color: #71C671;
  font-weight: 600;
} */
.product-count>text:not(:last-child) {
  color: #71C671;
  font-weight: 600;
}

.product-count>text:last-child {
  color: #87CEEB;
}

.product-count>text {
  border: 1px solid #ccc;
  height: 50rpx;
  width: 200rpx;
  border-radius: 25rpx;
  margin-right: 10rpx;
  line-height: 50rpx;
  margin-left: 5rpx;
}

/* 结束 */

/* 查询 */
.search-content{
  position: relative;
}
.input-query {
  height: 75rpx;
  width: 80%;
  border: 1px solid #ccc;
  border-radius: 50rpx;
  box-shadow: 0rpx 2rpx 20rpx 5rpx rgba(25, 25, 25, .1);
  margin: 150rpx auto 50rpx auto;
  padding-left: 20rpx;
  background: #fff;
}

.search-img {
  position: absolute;
  top:0rpx;
  left: 588rpx;
  height: 78rpx;
  z-index: 100;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  background: #87CEEB;
  width: 100rpx;
  border:none;
}

.btnhover {
  background-color: #10a1ed;
}

.search-img>image {
  height: 50rpx;
  width: 50rpx;
  margin: 5rpx 0rpx 0 -10rpx;
}

/* 查询结束 */

