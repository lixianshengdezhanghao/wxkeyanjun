}

.container__bd {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin: 90rpx 40rpx;
  font-size: 30rpx;
  text-align: center;
}

.swiper-tab {
  background-color: #fff;
  width: 100%;
  border-bottom: 2rpx solid #eeeeee;
  text-align: center;
  line-height: 80rpx;
  position: fixed;
  top: 0;
  z-index: 100;
}

.swiper-tab-item {
  font-size: 30rpx;
  display: inline-block;
  width: 20%;
  color: #666666;
}

.on {
  color: #87CEEB;
  border-bottom: 5rpx solid #87CEEB;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

