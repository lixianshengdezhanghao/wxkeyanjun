}
.look-details{
  margin-right: 20rpx;
  color: #aaa;
  font-size: 26rpx;
}
.look-details>text{
  margin-right: 15rpx;
}
.query-details{
  background: #f1f1f1;
  margin: 0rpx 10rpx 20rpx 10rpx;
