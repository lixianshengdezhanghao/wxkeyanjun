<!--pages/customer/my_order/order_details/order_details.wxml-->
<view class="page">
    <view class="pay-title">
        <image class="pay-img" src="/images/customer/dingdanbeijing.png" mode="scaleToFill|aspectFit|aspectFill|widthFix"></image>
        <view class="pay-title-content">
            <view class="pay-state">
                交易完成
            </view>
            <view class="pay-time">
                <text>支付时间:</text>
                <text>10月10日</text>
                <text>16:30</text>
            </view>
        </view>

    </view>
    <view class="pay-list">
        <view class="raidal-left"></view>
        <view class="raidal-right"></view>
        <view class="pay-list-content">
            <view class="order-type">
                订单类型:<text>合同订单</text>
            </view>
            <view class="service-object">
                服务对象:<text>王富贵</text>
            </view>
            <view class="payment-account">
                支付账户:<text>李先生</text>
            </view>
            <view class="service-organization">
                服务机构:<text>复旦大学人类表型研究院</text>
            </view>
            <view class="sampling-mechanism">
                取样机构:<text>复旦大学医院</text>
            </view>
            <view class="order-cycle">
                订单周期:<text>3月20日——4月1日</text>
            </view>
            <view class="pay-type">
                <view class="pay-type-title">验尿<text>(服务信息类)</text></view>
                <view class="line"></view>
                <view class="pay-money">
                    <view>物流费:<text>x1</text><text>￥20</text></view>
                    <view>仪器:<text>x1</text><text>￥60</text></view>
                    <view>人工费:<text>x1</text><text>￥500</text></view>
                </view>
                <view class="line"></view>
                <view class="total">合计:<text>￥580</text></view>
            </view>
            <button class="{{payMoney==1?'pay-btn':'none'}}">去支付</button>
            <view class="{{payMoney>1?'pay-number':'none'}}">已付款:￥580</view>
        </view>
    </view>
</view>